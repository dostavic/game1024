<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _1024Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_1024Web.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Chakra+Petch&family=Indie+Flower&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">1024 Game</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <table>
                            <tr>
                        <li class="nav-item">
                            <td class="link-ease-in-out">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                             </td>
                        </li>
                        <li class="nav-item">
                            <td class="link-ease-in-out">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                             </td>
                        </li>
                                <td class="link-ease-in-out">
                                    <a asp-area="" asp-controller="_1024" asp-action="Check">1024</a>
                                </td>
                        </li>
                         <li class="nav-item">
                             <td class="link-ease-in-out">
                            <a asp-area="" asp-controller="Comment1" asp-action="Index">Comments</a>
                             </td>
                        </li>
                        </li>
                         <li class="nav-item">
                             <td class="link-ease-in-out">
                            <a asp-area="" asp-controller="Score1" asp-action="Index">Score</a>
                             </td>
                        </li>
                        <li class="nav-item">
                             <td class="link-ease-in-out">
                            <a asp-area="" asp-controller="Rating1" asp-action="Index">Rating</a>
                             </td>
                        </li>
                            </tr>
                        </table>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - 1024 Game - <a class="no_pod" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <div class="container" id="container1">
            <a class="soc_img">
                <img id="img1" src="/images/soc/instagram.png" width="50" height="50"/>
            </a>
            <a class="soc_img">
                <img id="img1" src="/images/soc/telegram.png" width="50" height="50"/>
            </a>
            <a class="soc_img">
                <img id="img1" src="/images/soc/discord.png" width="50" height="50"/>
            </a>
           <a href="https://www.twitch.tv/polikstarik" class="soc_img">
                <img id="img1" src="/images/soc/twitch.png" width="50" height="50"/>
            </a>
            <a class="soc_img">
                <img id="img1" src="/images/soc/twitter.png" width="50" height="50"/>
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .link-ease-in-out td {
        text-align:center;
        vertical-align:middle;
    }
    .link-ease-in-out a {
    display: inline-block;
    color: rgb(119, 110, 101);
    line-height: 1;
        padding-right: 20px;
    text-decoration: none; /* Убираем подчеркивание */
    cursor: pointer;
    font-size: 20px;
        font-family: 'Chakra Petch', sans-serif;
}
.link-ease-in-out a:after {
    background-color: #f66d52; /* Цвет линии при наведении на нее курсора мыши */
    display: block;
    content: "";
    height: 2px; /* Высота линии */
    width: 0%;
    -webkit-transition: width .3s ease-in-out;
    -moz--transition: width .3s ease-in-out;
    transition: width .3s ease-in-out;
}
.link-ease-in-out a:hover:after,
.link-ease-in-out a:focus:after {
    width: 100%;
}

.no_pod {
    text-decoration: none;
    color: red;
}
.soc_img {
    padding: 30px;
    text-decoration: none;
}

#img1 {
    transition: 0.7s;
}

#img1:hover {
    transform: scale(1.2);
}

#container1 {
    margin-top: 15px;
}

</style>